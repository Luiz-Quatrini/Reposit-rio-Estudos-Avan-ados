#include <stdio.h>
int main()
{
    int a,b,c,d;
    b=0;
    c=0;
    while(a>=0)
    {
      printf("Digite um numero: \n");
      scanf("%d",&a);
      if(a>=0)
      {
         b+=a;
         c++;
         printf("A soma dos valores eh: %d\n",b);
         d=b/c;
         printf("A media eh: %d\n\n",d);
      }
      else
      {
          printf("Valor inserido invalido. ");
      }
    }
}
