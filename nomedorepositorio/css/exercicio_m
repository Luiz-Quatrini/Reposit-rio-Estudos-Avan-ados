#include<stdio.h>
void main()
{
    char NOME[50];
    int SEXO;
    printf("Digite seu nome(Se composto, usar ''_'' como espaco): ");
    scanf("%s", NOME);
    printf("Digite seu sexo (1 para M, 2 para F): ");
    scanf("%d", &SEXO);
    if(SEXO==1)
    {
        printf("Ilmo. Sr.%s.\n", &NOME);
    }
    else if(SEXO==2)
    {
        printf("Ilma. Sra.%s.\n", &NOME);
    }
    else
    {
        printf("Sexo informado invalido");
    }
}
