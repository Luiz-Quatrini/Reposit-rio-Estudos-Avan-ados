#include <stdio.h>
#include <math.h>
int main() 
{
   int A, B, C, D;
   printf("Digite o valor de A: \n");
   scanf("%d", &A);
   printf("Digite o valor de B: \n");
   scanf("%d", &B);
   printf("Digite o valor de C: \n");
   scanf("%d", &C);
    if (A > B) 
    {
        D = A;
        A = B;
        B = D;
    }
    if (A > C) 
    {
        D = A;
        A = C;
        C = D;
    }
    if (B > C) 
    {
        D = B;
        B = C;
        C = D;
    }
    printf("Os valores em ordem crescente sao: %d, %d, %d \n", A, B, C);
}
